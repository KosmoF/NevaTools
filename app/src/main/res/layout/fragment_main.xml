<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:padding="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="logo"
                android:src="@mipmap/neva_icon_main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,ImageContrastCheck" />
            
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sep1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_logo">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_sep1">

            <TextView
                android:id="@+id/tv_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_info_title"
                android:textAlignment="center"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>
            
            <TextView
                android:id="@+id/tv_driver_version"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_driver_version"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_title">

            </TextView>

            <TextView
                android:id="@+id/tv_driver_version_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_driver_version_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_driver_version"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_info_title">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_name"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_name"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_driver_version">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_name_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_name_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_driver_version_data">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_serial"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_serial"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_name">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_serial_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_serial_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_serial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_name_data">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sep2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_info">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_kkt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_sep2">

            <TextView
                android:id="@+id/tv_kkt_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_kkt_status_title"
                android:textAlignment="center"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_datetime"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_datetime"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_status_title">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_datetime_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_datetime_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_datetime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_status_title">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_shift_state"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_shift_state"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_datetime">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_shift_state_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_shift_state_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_shift_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_datetime_data">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_cap_state"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_cap_state"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_shift_state">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_cap_state_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_cap_state_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_cap_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_shift_state_data">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_paper_state"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_paper_state"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_cap_state">

            </TextView>

            <TextView
                android:id="@+id/tv_kkt_paper_state_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_kkt_paper_state_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_kkt_paper_state"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_kkt_cap_state_data">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sep3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_kkt_status">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ofd_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_sep3">

            <TextView
                android:id="@+id/tv_ofd_status_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_ofd_status_title"
                android:textAlignment="center"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tv_unsent_docs_count"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_unsent_docs_count"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ofd_status_title">

            </TextView>

            <TextView
                android:id="@+id/tv_unsent_docs_count_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_unsent_docs_count_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_unsent_docs_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ofd_status_title">

            </TextView>

            <TextView
                android:id="@+id/tv_first_unsent_doc"
                android:layout_width="215dp"
                android:layout_height="match_parent"
                android:text="@string/main_first_unsent_doc"
                android:textAlignment="textStart"
                android:singleLine="true"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_unsent_docs_count">

            </TextView>

            <TextView
                android:id="@+id/tv_first_unsent_doc_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/main_first_unsent_doc_data"
                android:textAlignment="textEnd"
                android:theme="@style/TextStyle"
                android:layout_marginStart="235dp"
                android:singleLine="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@+id/tv_first_unsent_doc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_unsent_docs_count_data">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_sep4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_ofd_status">
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_sep4">

            <TextView
                android:id="@+id/tv_ops_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_ops_title"
                android:textAlignment="center"
                android:theme="@style/TextStyle"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ops_title">

                <Button
                    android:id="@+id/export_logs_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_export_logs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </Button>

                <Button
                    android:id="@+id/import_img_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_import_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/export_logs_button">

                </Button>

                <Button
                    android:id="@+id/export_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_export_settings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/import_img_button">

                </Button>

                <Button
                    android:id="@+id/import_settings_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_import_settings"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/export_settings_button">

                </Button>

                <Button
                    android:id="@+id/clear_imgs_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_clear_imgs"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/import_settings_button">

                </Button>

                <Button
                    android:id="@+id/read_stat_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextStyle"
                    android:text="@string/main_read_stat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clear_imgs_button">

                </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>